{
  "name": "yuzu",
  "version": "1.0.0",
  "description": "",
  "main": "src/index.js",
  "license": "MIT",
  "homepage": "https://github.com/kaecius/Yuzu#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kaecius/Yuzu.git"
  },
  "author": "Erlantz Calvo and Daniel Ca√±adillas",
  "bugs": {
    "url": "https://github.com/kaecius/Yuzu/issues"
  },
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "lint": "eslint src --fix",
    "test": "npm run lint",
    "start": "eslint src --fix && electron .",
    "pack": "eslint src --fix && electron-builder --dir",
    "dist_windows": "eslint src --fix && electron-builder --windows",
    "release": "np"
  },
  "dependencies": {
    "electron-context-menu": "^3.1.1",
    "electron-debug": "^3.2.0",
    "electron-store": "^8.0.1",
    "electron-unhandled": "^3.0.2",
    "electron-updater": "^4.6.1",
    "electron-util": "^0.17.2",
    "events": "^3.3.0",
    "node-static": "^0.7.11",
    "vosk-browser": "^0.0.5",
    "ws": "^8.4.2"
  },
  "devDependencies": {
    "electron": "^16.0.5",
    "electron-builder": "^22.14.5",
    "eslint": "^8.4.1",
    "np": "^5.1.3"
  },
  "np": {
    "publish": false,
    "releaseDraft": false
  },
  "build": {
    "appId": "com.yuzu",
    "mac": {
      "category": "public.app-category.social-networking",
      "darkModeSupport": false
    },
    "dmg": {
      "iconSize": 160,
      "contents": [
        {
          "x": 180,
          "y": 170
        },
        {
          "x": 480,
          "y": 170,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Network;Chat"
    }
  }
}
